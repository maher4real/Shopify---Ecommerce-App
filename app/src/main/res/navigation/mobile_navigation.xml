<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.maheralivijapura.shopify.activities.fragments.FirstFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_first" />

    <fragment
        android:id="@+id/navigation_products"
        android:name="com.maheralivijapura.shopify.activities.fragments.SecondFragment"
        android:label="@string/title_products"
        tools:layout="@layout/fragment_second" />

    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.maheralivijapura.shopify.activities.fragments.ThirdFragment"
        android:label="@string/title_orders"
        tools:layout="@layout/fragment_third" />

    <fragment
        android:id="@+id/navigation_sold_products"
        android:name="com.maheralivijapura.shopify.activities.fragments.FourthFragment"
        android:label="@string/title_sold_products"
        tools:layout="@layout/fragment_fourth" />
